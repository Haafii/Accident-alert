<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/ll_appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B83AF"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_restAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/accident_alert_system"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">



        <Button
            android:id="@+id/accident"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#1B83AF"
            android:text="Emergency Accident"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="#1B83AF"
            android:layout_marginVertical="15sp"
            android:text="Add Contacts"
            android:textSize="18sp"
            android:textStyle="bold" />





        <Button
            android:id="@+id/minoraccident"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="#1B83AF"
            android:text="Minor Accident"
            android:textSize="18sp"
            android:textStyle="bold" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/websocketbutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1B83AF"
            android:text="connect"
            android:layout_marginTop="15dp"
            app:cornerRadius="20sp" />

    </LinearLayout>

</RelativeLayout>